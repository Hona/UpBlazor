@page "/"
@layout EmptyLayout

<Layout Style="min-height: 100vh">
    <Header Style="position: fixed; z-index: 1; width: 100%;">
        <div style="height: 100%; width: auto; display: flex; justify-content: space-between; align-items: center">
            <div style="height: 100%; display: flex; justify-content: flex-start; align-items: center">
                <Image Class="logo"
                       Preview="false"
                       Src="/img/up-logo-light-transparent-bg.svg"
                       Style="aspect-ratio: 1/1; height: 100%;"/>
                <Title Level="1" Style="padding: 0 0 0 1rem; margin: 0; font-size: 38px; font-weight: 500; color: #fff">
                    Blazor
                </Title>
            </div>
            <Menu Mode="MenuMode.Horizontal" Theme="MenuTheme.Dark">
                <MenuItem>
                    <AuthorizeView>
                        <Authorized>
                            <MenuLink Href="/home">Home</MenuLink>
                        </Authorized>
                        <NotAuthorized>
                            <MenuLink Href="/authentication/login">Login</MenuLink>
                        </NotAuthorized>
                    </AuthorizeView>
                </MenuItem>
            </Menu>
        </div>
    </Header>
    <Content Style="margin-top: 64px; height: calc(100vh - 64px - 64px); background: #001529;">
        <div class="banner">
            <div style="padding: 0 3rem">
                <Title Level="1" Style="color: #fff; font-weight: normal">
                    Budgeting,
                </Title>
                <Title Level="1" Style="color: #fff; font-weight: 600; font-size: 48px; margin: 0;">
                    Simplified.
                </Title>
            </div>
            <div class="banner-img-slider" style="overflow: hidden;">
                <Carousel Effect="@CarouselEffect.Fade" Autoplay="TimeSpan.FromSeconds(3)">
                    @foreach (var imageSrc in _bannerImages)
                    {
                        <CarouselSlick>
                            <Image Preview="false" Src='@($"/img/banner/{imageSrc}")' 
                                   Class="banner-img-slider"/>
                        </CarouselSlick>
                    }
                </Carousel>
            </div>
        </div>
    </Content>
    <Content>
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center">
            <Card Class="landing-banner-card" BodyStyle="display: flex; flex-direction: column; justify-content: flex-start; align-items: center; padding:0">
                <Title Level="2" Style="padding: 2rem">
                    Features
                </Title>
                <Space Class="features-container" Wrap Size="@("large")" Style="justify-content: center; align-items: flex-start">
                    <SpaceItem>
                        <Card Hoverable
                              Title="💰 Income">
                            Track multiple incomes & graphs to see your gross income over time.
                        </Card>
                    </SpaceItem>
                    <SpaceItem>
                        <Card Hoverable
                              Title="💸 Expenses">
                            Track multiple expenses - both one off and recurring. See how much you spend on certain things, or track how much you need to save!
                        </Card>
                    </SpaceItem>
                    <SpaceItem>
                        <Card Hoverable
                              Title="🏦 Savings Plan">
                            Forward plan how much money you put into each bucket (saver) every pay cycle. Expenses are automatically deducted! Find out just how long it takes to save up for that holiday.
                        </Card>
                    </SpaceItem>
                    <SpaceItem>
                        <Card Hoverable
                              Title="🎯 Goals">
                            Struggle with saving? Set your goals and track how far on (or off) track you are!
                        </Card>
                    </SpaceItem>
                    <SpaceItem>
                        <Card Hoverable
                              Title="🧑‍🤝‍🧑 2Up">
                            With support for connecting multiple Up users, you can share expenses, incomes & planning together!
                        </Card>
                    </SpaceItem>
                    <SpaceItem>
                        <Card Hoverable
                              Title="📈 Insights">
                            You can view graphs & analytics boards to see gross income & expenses, projected account balances as well as transation history!
                        </Card>
                    </SpaceItem>
                </Space>
                <div style="padding: 1rem"></div>
            </Card>
        </div>
    </Content>
    <Footer Style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
        <Space Wrap Align="center">
            <SpaceItem Class="footer-space">
                <a href="https://github.com/Hona/UpBlazor" target="_blank">
                    <Icon Class="footer-icon" Type="@IconType.Outline.Github"/>
                    Source Code
                </a>
            </SpaceItem>
            <SpaceItem Class="footer-space">
                <a href="https://twitter.com/LukeParkerDev">
                    <Icon Class="footer-icon" Type="@IconType.Outline.Twitter"/>
                    Contact
                </a>
            </SpaceItem>
        </Space>
    </Footer>
</Layout>

@code
{
    private readonly IReadOnlyList<string> _bannerImages = new []
    {
        "form-components.png",
        "graph.png",
        "notifications.png",
        "responsive-sider.png",
        "status-with-form.png",
        "table.png"
    };
}

@using System.Runtime.CompilerServices

<Space>
    <SpaceItem>
        <IncomeSelector @bind-SelectedIncome="SelectedIncome"/>
    </SpaceItem>
    <SpaceItem>
        <SaverSelector @bind-SelectedSaver="SelectedSaver" />
    </SpaceItem>
    @*<SpaceItem>
        <AntDesign.Switch @bind-Checked="_isIncome"/>
    </SpaceItem>*@
</Space>

@code
{
    private bool _isIncome;
    
    private AccountResource _selectedSaver;
    private Income _selectedIncome;

    [Parameter]
    public ExpenseSource Value { get; set; }

    [Parameter]
    public EventCallback<ExpenseSource> ValueChanged { get; set; }

    private AccountResource SelectedSaver
    {
        get => _selectedSaver;
        set
        {
            _selectedSaver = value;
            Value.SaverId = value?.Id;

            if (value == null)
            {
                InvokeValueChanged();
                StateHasChanged();
                return;
            }
            
            _selectedIncome = null;
            Value.IncomeId = null;
            
            InvokeValueChanged();
            StateHasChanged();
        }
    }

    private Income SelectedIncome
    {
        get => _selectedIncome;
        set
        {
            _selectedIncome = value;
            Value.IncomeId = value?.Id;

            
            if (value == null)
            {
                InvokeValueChanged();
                StateHasChanged();
                return;
            }
            
            _selectedSaver = null;
            Value.SaverId = null;
            
            InvokeValueChanged();
            StateHasChanged();
        }
    }

    private void OnTypeChange(bool isIncome)
    {
        if (isIncome)
        {
            SelectedSaver = null;
        }
        else
        {
            SelectedIncome = null;
        }
    }

    public void ChangeType(bool isIncome)
    {
        _isIncome = isIncome;
        
        OnTypeChange(isIncome);
    }

    private void InvokeValueChanged()
    {
        if (ValueChanged.HasDelegate)
        {
            ValueChanged.InvokeAsync(Value);
        }
    }

    public void Reset()
    {
        _selectedIncome = null;
    }
    
    public class ExpenseSource
    {
        public string SaverId { get; set; }
        public Guid? IncomeId { get; set; }
    }
}

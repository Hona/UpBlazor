@using MudBlazor

@if (_saver != null)
{
    <MudText>
        @(_saver.Attributes.DisplayName) ($@(_saver.Attributes.Balance.Value))
    </MudText>
}

@code
{
    [Parameter]
    public IReadOnlyList<AccountResource> Accounts { get; set; } = null!;

    [Parameter]
    public string? SaverId { get; set; }
    
    private AccountResource? _saver;

    protected override void OnParametersSet()
    {
        ArgumentNullException.ThrowIfNull(Accounts);
        
        _saver = Accounts!.FirstOrDefault(x => x.Id == SaverId);
    }
}

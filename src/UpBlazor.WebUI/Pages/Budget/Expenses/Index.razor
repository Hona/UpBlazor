@page "/budget/expenses"

<MudStack>
    <CreateExpense OnNewExpense="OnNewExpenseAsync"/>

    <ExpensesTable @ref="_expensesTable"/>

    <RecurringExpensesTable @ref="_recurringExpensesTable"/>
</MudStack>

@code
{
    private ExpensesTable _expensesTable = null!;
    private RecurringExpensesTable _recurringExpensesTable = null!;

    private async Task OnNewExpenseAsync()
    {
        await _expensesTable.ReloadAsync(true);
        await _recurringExpensesTable.ReloadAsync(true);
    }
}

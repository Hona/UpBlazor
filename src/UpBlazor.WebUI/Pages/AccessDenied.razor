@layout MainLayout
@page "/access-denied"
@using Color = MudBlazor.Color

<MudAlert Severity="Severity.Error">
    <MudText>
        <strong>
            Access Denied
        </strong>
    </MudText>
    <MudText>
        Please check you are signing in as an authorized user (based on your microsoft email address). Please contact Luke if you believe you should have access.
    </MudText>
</MudAlert>

<MudButton Color="Color.Primary" Href="/home">
    Home
</MudButton>
<MudButton Href="/authentication/logout">
    Signout
</MudButton>
